@using EyeCT4EventsMVC.Models.Domain_Classes

@{
    ViewBag.Title = "Reservering";
}
<h2>Reservering</h2>
<form>
    <div class="form-group">
        <label for="inputName">Naam</label>
        <input type="text" class="form-control" id="inputName" placeholder="Naam">
    </div>
    <div class="form-group">
        <label for="DatumVan">Start Datum</label>
        <input type="date" class="form-control" id="DatumVan">
    </div>
    <div class="form-group">
        <label for="DatumTot">Eind Datum</label>
        <input type="date" class="form-control" id="DatumTot">
    </div>
    <div class="form-group">
        <label for="AantalPersonen">Aantal Personen</label>
        <input type="number" class="form-control" id="AantalPersonen">
    </div>
    <div>
        <textarea name="Campingplaatslijst" rows="30" cols="20">
          
                @foreach (Kampeerplaats k in (List<Kampeerplaats>)ViewBag.AlleKampeerplaatsen)
            {
                    @k.Locatie
                }
      
        </textarea>
    </div>
</form>
