@using EyeCT4EventsMVC.Models.Domain_Classes
@using EyeCT4EventsMVC.Models.Domain_Classes.Gebruikers
@{
    ViewBag.Title = "ReserveringSubmit";
    Layout = "~/Views/Shared/_NoHeaderLayout.cshtml";
}

<h2>ReserveringSubmit</h2>

<form action="@Url.Action("ReserveringOpslaan", new { AantalPersonen = Convert.ToInt32(Request.QueryString["AantalPersonen"]) })" method="get">

    @for (int i = 0; i < Convert.ToInt32(Request.QueryString["AantalPersonen"]); i++)
    {
        <div class="form-group">
            <label for="inputName">Naam</label>
            <input type="text" class="form-control" name="Naam @i" placeholder="Naam">
            <label for="InputEmail">Emailadres</label>
            <input type="email" class="form-control" name="Email @i " placeholder="Emailadres" />
        </div>

    }
    <div class="form-group">
        <input type="submit" value="Reserveer" class="form-control" />
    </div>

</form>
