@{
    Layout = "~/Views/Shared/_NoHeaderLayout.cshtml";
    ViewBag.Title = "Login";
}

@ViewBag.Error
<form class="form-horizontal" method="post">
    <div class="form-group">
        <div class="col-sm-10">
            <h2>Login</h2>
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">Gebruikersnaam</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="Gebruikersnaam" name="gebruikersnaam">
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">Wachtwoord</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" id="inputEmail3" placeholder="Wachtwoord" name="wachtwoord">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2">
            <button type="submit" class="btn btn-default form-control">Inloggen</button>
        </div>
    </div>
</form>
