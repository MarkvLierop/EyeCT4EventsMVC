
@using EyeCT4EventsMVC.Models.Domain_Classes.Gebruikers
@model EyeCT4EventsMVC.Models.Domain_Classes.Media
@{
    ViewBag.Title = "MediaToevoegen";
    Layout = "~/Views/Shared/_NoHeaderLayout.cshtml";
}

<h2>Media toevoegen</h2>

<form method="get" action="@Url.Action("InsertMedia", "SocialMedia")">
    <div class="form-group">
        <label class="control-label" for="inputDefault">Beschrijving:</label>
        @Html.TextBoxFor(m => m.Beschrijving, new { @class = "form-control" })<br />
        <label class="control-label" for="inputDefault">Bestand:</label>
        @Html.TextBoxFor(m => m.Pad, new { @class = "form-control", type="file" })<br />
        @Html.TextBoxFor(m => m.GeplaatstDoor, new { @class = "form-control", type = "hidden", value = ((Gebruiker)Session["Gebruiker"]).ID })<br />
        @Html.TextBoxFor(m => m.Categorie, new { @class = "form-control", type = "hidden", value = Url.RequestContext.RouteData.Values["id"].ToString() })<br />
        <input type="submit" value="Toevoegen" class="btn btn-default" />
    </div>
</form>