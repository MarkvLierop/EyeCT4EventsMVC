<h2>Aanwezige Bezoekers</h2>
<div class="row">
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Naam Bezoeker</th>
                    <th>Aanwezig</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.Aanwezig)
                {
                    <tr>
                        <td>@item.Voornaam @item.Tussenvoegsel @item.Achternaam</td>
                        <td>@item.Aanwezig</td>
                        <td>@item.Email</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

