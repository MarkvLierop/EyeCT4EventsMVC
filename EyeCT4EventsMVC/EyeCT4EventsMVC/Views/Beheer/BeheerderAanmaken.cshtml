@{
    Layout = "~/Views/Shared/_NoHeaderLayout.cshtml";
    ViewBag.Title = "Gebruiker aanmaken";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Beheerder Aanmaken</title>
</head>
<body>
    <div class="container">
        <form class="form-horizontal" role="form" action="/Beheer/MaakBeheerderAan">
            <h2>Registreren</h2>
        <div class="form-group">
            <label for="type" class="col-sm-3 control-label">Gebruikertype</label>
            <div class="col-sm-9">
                <select name="type">
                    <option>
                        Beheerder
                    </option>
                    <option>
                        Medewerker
                    </option>
                </select>
            </div>
        </div>
            <div class="form-group">
                <label for="Voornaam" class="col-sm-3 control-label">Voornaam</label>
                <div class="col-sm-9">
                    <input type="text" id="Voornaam" placeholder="Voornaam" class="form-control" name="Voornaam" autofocus />
                </div>
            </div>
            <div class="form-group">
                <label for="Tussenvoegsel" class="col-sm-3 control-label">Tussenvoegsel</label>
                <div class="col-sm-9">
                    <input type="text" id="Tussenvoegsel" placeholder="Tussenvoegsel" class="form-control" name="Tussenvoegsel" autofocus />
                </div>
            </div>
            <div class="form-group">
                <label for="Achternaam" class="col-sm-3 control-label">Achternaam</label>
                <div class="col-sm-9">
                    <input type="text" id="Achternaam" placeholder="Achternaam" class="form-control" name="Achternaam" autofocus />
                </div>
            </div>
            <div class="form-group">
                <label for="email" class="col-sm-3 control-label">Email</label>
                <div class="col-sm-9">
                    <input type="email" id="email" placeholder="Email" class="form-control" name="Email" autofocus />
                </div>
            </div>
            <div class="form-group">
                <label for="Gebruikersnaam" class="col-sm-3 control-label">Gebruikersnaam</label>
                <div class="col-sm-9">
                    <input type="text" id="gebruikersnaam" placeholder="Gebruikersnaam" class="form-control" name="Gebruikersnaam"/>
                </div>
            </div>
            <div class="form-group">
                <label for="Wachtwoord" class="col-sm-3 control-label">Wachtwoord</label>
                <div class="col-sm-9">
                    <input type="password" id="Wachtwoord" placeholder="Wachtwoord" class="form-control" name="Wachtwoord" autofocus />
                </div>
            </div>
            <div class="form-group">
                <label for="WachtwoordBevestigen" class="col-sm-3 control-label">Wachtwoord bevestigen</label>
                <div class="col-sm-9">
                    <input type="password" id="WachtwoordBevestigen" placeholder="Wachtwoord bevestigen" class="form-control" autofocus />
                </div>
            </div>
      
            <div class="form-group">
                <div class="col-sm-9 col-sm-offset-3">
                    <button type="submit" class="btn btn-primary btn-block">Aanmaken</button>
                </div>
            </div>
        </form> <!-- /form -->
    </div> <!-- ./container -->
</body>
</html>
