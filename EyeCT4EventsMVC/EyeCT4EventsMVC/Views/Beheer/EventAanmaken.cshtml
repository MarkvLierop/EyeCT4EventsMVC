@{
    Layout = "~/Views/Shared/_NoHeaderLayout.cshtml";
    ViewBag.Title = "Event Aanmaken";
}
<!DOCTYPE Html>
<html>
<body>
    <header>
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="@Url.Action("Index","Beheer")">Beheersysteem</a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Gerapporteerde: <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="/Beheer/GerapporteerdeMedia">Media</a></li>
                                <li><a href="/Beheer/GerapporteerdeReactie">Reactie</a></li>
                            </ul>
                        </li>
                        <li><a href="/Beheer/EventAanmaken">Event aanmaken</a></li>
                        <li><a href="/Beheer/BeheerderAanmaken">Beheerder aanmaken</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <form class="form-horizontal" method="post" action="/Beheer/Aanmaken">
        <div class="form-group">
            <div class="col-sm-10">
                <h2>Event Aanmaken</h2>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Locatie</label>
            <div class="col-sm-10">
                <select name="locatie">
                    @foreach (var item in ViewBag.Locatie)
                    {
                        <option>@item.Naam</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Datum Van</label>
            <div class="col-sm-10">
                <input type="date" class="form-control" id="datumVan" name="datumVan">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Datum Tot</label>
            <div class="col-sm-10">
                <input type="date" class="form-control" id="datumTot" name="datumTot">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Titel</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="Titel" name="titel">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Beschrijving</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="Beschrijving" name="beschrijving">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-10">
                <input type="submit" />
            </div>
        </div>
    </form>
</body>
</html>
